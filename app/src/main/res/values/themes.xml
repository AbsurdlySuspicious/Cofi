<resources>
    <!-- Base application theme. -->
    <style name="Theme.Cofi" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/navigationBar</item>
        <item name="android:colorAccent">?android:attr/colorAccent</item>
        <item name="android:background">?android:attr/background</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Cofi.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Cofi.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Cofi.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>